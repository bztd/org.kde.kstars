    "runtime-version": "5.15-21.08",
    "sdk": "org.kde.Sdk",
    "command": "kstars",
    "rename-icon": "kstars",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
